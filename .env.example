# Database
DATABASE_URL="your_postgres_url"

# AI Models (Required)
ANTHROPIC_API_KEY="sk-ant-..."
OPENAI_API_KEY="sk-proj-..."

# Whop Authentication
WHOP_API_KEY="your_whop_api_key"
WHOP_COMPANY_ID="biz_..."
NEXT_PUBLIC_WHOP_COMPANY_ID="biz_..."

# ============================================
# BANKING INTEGRATION
# ============================================

# Banking Provider: 'plaid', 'truelayer', or 'mock'
BANKING_PROVIDER="plaid"

# Plaid API (US/Canada)
# Sign up at: https://dashboard.plaid.com/signup
# Sandbox: Free (unlimited), Production: Pay-as-you-go
PLAID_CLIENT_ID="your_plaid_client_id"
PLAID_SECRET="your_plaid_secret"
PLAID_ENVIRONMENT="sandbox"  # 'sandbox' or 'production'

# TrueLayer API (UK/EU)
# Sign up at: https://console.truelayer.com/
TRUELAYER_CLIENT_ID="your_truelayer_client_id"
TRUELAYER_CLIENT_SECRET="your_truelayer_client_secret"
TRUELAYER_REDIRECT_URI="${NEXT_PUBLIC_APP_URL}/api/banking/callback"
TRUELAYER_ENVIRONMENT="sandbox"  # 'sandbox' or 'production'

# ============================================
# NEWS API KEYS (Multi-source fallback system)
# ============================================

# Primary: NewsAPI.org (Free: 100 req/day)
# https://newsapi.org/register
NEWS_API_KEY="your_newsapi_key"

# Backup: Alpha Vantage (Free: 500 req/day)  
# https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY="your_alpha_vantage_key"

# Optional: Finnhub (Free: 60 calls/min)
# https://finnhub.io/register  
FINNHUB_API_KEY="your_finnhub_key"

# Optional: Marketaux (Free: 100 req/day)
# https://www.marketaux.com/
MARKETAUX_API_KEY="your_marketaux_key"

# Optional: Perplexity AI (Premium)
# https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY="pplx-..."

